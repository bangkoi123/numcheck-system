{
  "name": "numcheck-system",
  "version": "1.0.0",
  "description": "Event-driven multi-tenant WhatsApp & Telegram number validation system",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter gateway dev\" \"pnpm --filter web-user dev\" \"pnpm --filter web-admin dev\"",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:integration": "pnpm --filter @numcheck/tests test:integration",
    "test:e2e": "pnpm --filter @numcheck/tests test:e2e",
    "db:migrate": "pnpm --filter @numcheck/database migrate",
    "db:seed": "pnpm --filter @numcheck/database seed",
    "db:studio": "pnpm --filter @numcheck/database studio",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
