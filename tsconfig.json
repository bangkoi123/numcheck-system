{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2018", "ES2017", "ES2015", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@numcheck/shared": ["./packages/shared/src"],
      "@numcheck/database": ["./packages/database/src"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["node"]
  },
  "include": [
    "packages/*/src/**/*",
    "services/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "apps",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/database"
    },
    {
      "path": "./services/gateway"
    },
    {
      "path": "./services/worker-wa"
    },
    {
      "path": "./services/worker-tg"
    },
    {
      "path": "./services/aggregator"
    }
  ]
}
